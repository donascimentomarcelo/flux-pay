{
  "version": "0.2.0",
  "configurations": [
    {
      "name": ".NET Launch API",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build-api",
      "program": "${workspaceFolder}/src/Pay.Api/bin/Debug/net10.0/Pay.Api.dll",
      "args": [],
      "cwd": "${workspaceFolder}/src/Pay.Api",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
        "uriFormat": "%s/swagger"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      }
    },
    {
      "name": ".NET Launch OutboxWorker",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build-worker",
      "program": "${workspaceFolder}/src/Pay.OutboxWorker/bin/Debug/net10.0/Pay.OutboxWorker.dll",
      "args": [],
      "cwd": "${workspaceFolder}/src/Pay.OutboxWorker",
      "stopAtEntry": false
    }
  ],
  "compounds": [
    {
      "name": "Run ALL (API + Worker)",
      "configurations": [
        ".NET Launch API",
        ".NET Launch OutboxWorker"
      ]
    }
  ]
}
